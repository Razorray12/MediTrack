        <include layout="@layout/patient_view" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/patient_view" />

    </com.facebook.shimmer.ShimmerFrameLayout>

</LinearLayout>
